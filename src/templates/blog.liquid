<div id="fullpage">
  {% paginate blog.articles by 5 %}
  <!-- <h1>{{ blog.title }}</h1> -->
  {% for article in blog.articles %}
    {% assign desktop_img = article.image | img_url: "master" %}
    {% if article.metafields.cf_story.mobile_img %}
    {% assign mobile_img = article.metafields.cf_story.mobile_img | file_url %}
    {% else %}
    {% assign mobile_img = desktop_img %}
    {% endif %}  
    <section class="vertical-scrolling desktop" id="section{{forloop.index}}" style="background-image: url('{{desktop_img}}'); background-size: cover; background-repeat: no-repeat; background-position: center center;" data-desktop-url="{{desktop_img}}" data-mobile-url="{{mobile_img}}">
      <div class="container-fluid h-100">
        <div class="row h-100 no-gutters mx-auto contentWidth">
          <div class="col-lg-12 my-auto align-self-center main_stories">
            <h5><a href="{{ article.url }}" class="product_link">STORY</a></h5>
            <h2><a href="{{ article.url }}" class="product_link">{{ article.title }}</a></h2>
            <h5><a href="{{ article.url }}" class="product_link">EXPLORE</a></h5>
          </div>
        </div>
      </div>
    </section>
  {% endfor %}
  
  {% if paginate.pages > 1 %}
    {{ paginate | default_pagination }}
  {% endif %}
  
  {% endpaginate %}
  </div>